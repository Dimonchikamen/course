{
  "compilerOptions": {
    "outDir": "./build/",

    "noImplicitAny": true,
    "module": "ESNext",

    "target": "es5",
    "jsx": "react-jsx",

    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",
    "paths": {
      "config/*": ["./config/*"],
      "app/*": ["./src/app/*"],
      "pages/*": ["./src/pages/*"],
      "widgets/*": ["./src/widgets/*"],
      "features/*": ["./src/features/*"],
      "entities/*": ["./src/entities/*"],
      "shared/*": ["./src/shared/*"]
    },

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  },

  "include": [
    "./node_modules/*",
    "./**/config/**/*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./config/jest/jest.setup.ts"
  ],
}